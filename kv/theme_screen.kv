<ThemeScreen>:

	GridLayout:
		cols: 1
		spacing: 20, 20
		MDLabel:	
		MDRectangleFlatButton:
			size_hint: None, .3
			pos_hint: {"center_x": .5}
			width: 40
			text: "Change Theme"
			on_press:
				app.change_theme()

		MDRectangleFlatButton:
			size_hint: None, .3
			pos_hint: {"center_x": .5}
			width: 40
			text: "Dark / Light"
			on_press:
				app.change_style()
		MDLabel