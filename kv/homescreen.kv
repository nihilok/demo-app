
<HomeScreen>:
    GridLayout:
        cols: 1
        padding: 50, 50, 50, 50
        spacing: 20, 20
        canvas.before:
            Color:
                rgba: app.theme_cls.primary_light
            Rectangle:
                size: self.size
                pos: self.pos
        MDCard:
            orientation: "vertical"
            padding: "20dp"
            size_hint: .85, .6

            MDLabel:
                text: "Welcome to the APP!"
                theme_text_color: "Secondary"
                font_style: 'H4'
                size_hint_y: None
                height: self.texture_size[1]

            MDSeparator:
                height: "1dp"
            MDLabel:
                size_hint_y: .02
            MDLabel:
                text: app.app_description()
                size_hint_y: None

                height: self.texture_size[1]
                halign: 'justify'
            MDLabel:
                text: "The image below will fill the rest of the space:"
                size_hint_y: .15
            Image:
                source: 'images/image.png'
                #size: self.size
        GridLayout:
            size_hint_y: .4
            spacing: 20, 20
            rows: 1
            cols: 2
            MDCard:
                Image:
                    source: 'images/icon.png'
            MDCard:
                orientation: "vertical"
                padding: "20dp"
                GridLayout:
                    cols: 1
                    MDLabel:
                        text: "The same description again!"
                        theme_text_color: "Secondary"
                        font_style: 'H6'
                        size_hint_y: None
                        height: self.texture_size[1]
                        text_size: root.size
                    MDSeparator:
                        height: "1dp"
                    MDLabel:
                        text: "\n" + app.app_description() + "\n\nYou could also add more text here if you make it really small."
                        halign: 'justify'
                        valign: "middle"
                        text_size: root.size
                        size: self.texture_size
