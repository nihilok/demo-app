
<HomeScreen>:
    GridLayout:
        cols: 1
        padding: 60, 50, 50, 60
        spacing: 10, 10
        canvas.before:
            Color:
                rgb: utils.get_color_from_hex("#b19cd9")
            Rectangle:
                size: self.size
                pos: self.pos
        MDCard:
            orientation: "vertical"
            padding: "20dp"
            size_hint: .85, .7

            MDLabel:
                text: "Welcome to the APP!"
                theme_text_color: "Secondary"
                font_style: 'H4'
                size_hint_y: None
                height: self.texture_size[1]

            MDSeparator:
                height: "1dp"
            MDLabel:
                size_hint_y: .02
            MDLabel:
                text: app.app_description()
                size_hint_y: None

                height: self.texture_size[1]
                halign: 'justify'
            MDLabel:
                text: "The image below will fill the rest of the space:"
                size_hint_y: .15
            Image:
                source: 'images/icon.png'
                #size: self.size
        GridLayout:
            size_hint_y: .3
            spacing: 10, 10
            rows: 1
            cols: 2
            MDCard:
                Image:
                    source: 'images/image.png'
            MDCard:
                orientation: "vertical"
                padding: "30dp"
                GridLayout:
                    cols: 1
                    MDLabel:
                        text: "The same description again!"
                        theme_text_color: "Secondary"
                        font_style: 'H6'
                        size_hint_y: None
                        height: self.texture_size[1]
                        font_size: 14
                    MDSeparator:
                        height: "1dp"
                    MDLabel:
                        size_hint: 1, .02
                    MDLabel:
                        text: app.app_description() + "\n\nYou could also add more text here if you make it really small."
                        size_hint_y: .7
                        halign: 'justify'
                        font_size: 11
                        size_hint_y: None
                        height: self.texture_size[1]
