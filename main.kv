#:include kv/homescreen.kv
#:include kv/aboutscreen.kv
#:include kv/resourcesscreen.kv
#:include kv/themescreen.kv
#:include kv/tabscreen.kv
#:include kv/profilescreen.kv
#:include kv/photoscreen.kv
#:include kv/gamescreen.kv

<CustomNavBarButton@OneLineAvatarListItem>:

Screen:
    BoxLayout:
        orientation: "vertical"
        MDToolbar:
            pos_hint: {"top": 1, "center_x": .5}
            title: "My Demo App"
            left_action_items: [["menu", lambda x: app.open_nav_drawer()]]
        NavigationLayout:
            id: nav_layout
            ScreenManager:
                id: screen_manager
                HomeScreen:
                    name: "home_screen"
                    id: home_screen
                ResourcesScreen:
                    name: "resources_screen"
                    id: resources_screen
                AboutScreen:
                    name: "about_screen"
                    id: about_screen
                ThemeScreen:
                    name: "theme_screen"
                    id: theme_screen
                ProfileScreen:
                    name: "profile_screen"
                    id: profile_screen
                TabScreen:
                    name: "tab_screen"
                    id: tab_screen
                GameScreen:
                    name: "game_screen"
                    id: game_screen
                PhotoScreen:
                    name: "photo_screen"
                    id: photo_screen

    MDNavigationDrawer:
        id: nav_drawer

        canvas:
            Color:
                rgba: self.theme_cls.bg_dark
            Rectangle:
                size: self.size
                pos: self.pos
        ContentNavigationDrawer:
            orientation: "vertical"
            Image:
                id: avatar
                size_hint: 1, 1
                source: "images/image.png"
            CustomNavBarButton:
                text: "Home"
                on_release:
                    app.close_nav_drawer()
                    app.screen_manager.current = 'home_screen'
                IconLeftWidget:
                    icon: "home"
                    on_release:
                        app.close_nav_drawer()
                        app.screen_manager.current = 'home_screen'
            CustomNavBarButton:
                text: "Resources"
                on_release:
                    app.close_nav_drawer()
                    app.screen_manager.current = 'resources_screen'
                IconLeftWidget:
                    icon: "library"
                    on_release:
                        app.close_nav_drawer()
                        app.screen_manager.current = 'resources_screen'
            CustomNavBarButton:
                text: "Change Theme"
                on_release:
                    app.close_nav_drawer()
                    app.screen_manager.current = 'theme_screen'
                IconLeftWidget:
                    icon: "format-color-fill"
                    on_release:
                        app.close_nav_drawer()
                        app.screen_manager.current = 'theme_screen'
            CustomNavBarButton:
                text: "Profile"
                on_release:
                    app.close_nav_drawer()
                    app.screen_manager.current = 'profile_screen'
                IconLeftWidget:
                    icon: "format-color-fill"
                    on_release:
                        app.close_nav_drawer()
                        app.screen_manager.current = 'profile_screen'
            CustomNavBarButton:
                text: "Tab Layout"
                on_release:
                    app.close_nav_drawer()
                    app.screen_manager.current = 'tab_screen'
                IconLeftWidget:
                    icon: "format-color-fill"
                    on_release:
                        app.close_nav_drawer()
                        app.screen_manager.current = 'tab_screen'               
            CustomNavBarButton:
                text: "Game"
                on_release:
                    app.close_nav_drawer()
                    app.screen_manager.current = 'game_screen'
                IconLeftWidget:
                    icon: "format-color-fill"
                    on_release:
                        app.close_nav_drawer()
                        app.screen_manager.current = 'game_screen'
            CustomNavBarButton:
                text: "Photo Gallery"
                on_release:
                    app.close_nav_drawer()
                    app.screen_manager.current = 'photo_screen'
                IconLeftWidget:
                    icon: "information"
                    on_release:
                        app.close_nav_drawer()
                        app.screen_manager.current = 'photo_screen'

            MDLabel:
            MDLabel:
